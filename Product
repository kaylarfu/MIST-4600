
public class Product {

	protected int ProductID;
	private String ProductName;
	private String Category;
	private String Size;
	private String Color;
	private double UnitPrice;
	private int Quantity;
	static int ProductCount = 10001;

	
	
	
	// hashset unqiue and not care about order 
	// encapsualtion (private, protected)
	// polymorphism (have a collection of bank account, add saving as a bank account )
	// method pass in dog that only accepts animal 
	// no dress up, 10mins and below 
	// 
	
	
	public Product() {
		ProductID = ProductCount;
		ProductName = "Unkown";
		Category = "Unkown";
		Size = "Unkown";
		Color = "Unkown";
		UnitPrice = 0;
		setQuantity(0);
		ProductCount ++;
		
	}
	
	public Product (String name, String category, String size, String color, double price, int quantity) 
	{
		
		ProductID = ProductCount;
		ProductName = name;
		Category = category;
		Size = size;
		Color = color;
		UnitPrice = price;
		setQuantity(quantity);
		ProductCount ++;
	}
	
	public long getProductID() {
		return ProductID;
	}
	public void setProductID(int productID) {
		ProductID = productID;
	}
	public String getProductName() {
		return ProductName;
	}
	public void setProductName(String productName) {
		ProductName = productName;
	}
	public String getCategory() {
		return Category;
	}
	public void setCategory(String category) {
		Category = category;
	}
	public String getSize() {
		return Size;
	}
	public void setSize(String size) {
		Size = size;
	}
	public String getColor() {
		return Color;
	}
	public void setColor(String color) {
		Color = color;
	}
	public double getUnitPrice() {
		return UnitPrice;
	}
	public void setUnitPrice(double unitPrice) {
		UnitPrice = unitPrice;
	}

	public int getQuantity() {
		return Quantity;
	}

	public void setQuantity(int quantity) {
		Quantity = quantity;
	}
	
	
	
	
}
